<h1>Listing tweeters</h1>

<table>
  <tr>
    <th>Created at</th>
    <th>Friends count</th>
    <th>Profile image url</th>
    <th>Followers count</th>
    <th>Screen name</th>
    <th>Location</th>
    <th>Geo enabled</th>
    <th>Time zone</th>
    <th>Protected</th>
    <th>Description</th>
    <th>Profile background image url</th>
    <th>Url</th>
    <th>Statuses count</th>
  </tr>

<% @tweeters.each do |tweeter| %>
  <tr>
    <td><%=h tweeter.created_at %></td>
    <td><%=h tweeter.friends_count %></td>
    <td><%=h tweeter.profile_image_url %></td>
    <td><%=h tweeter.followers_count %></td>
    <td><%=h tweeter.screen_name %></td>
    <td><%=h tweeter.location %></td>
    <td><%=h tweeter.geo_enabled %></td>
    <td><%=h tweeter.time_zone %></td>
    <td><%=h tweeter.protected %></td>
    <td><%=h tweeter.description %></td>
    <td><%=h tweeter.profile_background_image_url %></td>
    <td><%=h tweeter.url %></td>
    <td><%=h tweeter.statuses_count %></td>
    <td><%= link_to 'Show', tweeter %></td>
    <td><%= link_to 'Edit', edit_tweeter_path(tweeter) %></td>
    <td><%= link_to 'Destroy', tweeter, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New tweeter', new_tweeter_path %>